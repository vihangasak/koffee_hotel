@{
    ViewBag.Title = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Users</h5>
                <p class="card-text">@ViewBag.TotalUsers</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Reservations</h5>
                <p class="card-text">@ViewBag.TotalReservations</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Orders</h5>
                <p class="card-text">@ViewBag.TotalOrders</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Recent Users</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Registration Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in ViewBag.RecentUsers)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.EmailAddress</td>
                        <td>@user.CreateDateTime.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <h3>Recent Reservations</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Reservation ID</th>
                    <th>User</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in ViewBag.RecentReservations)
                {
                    <tr>
                        <td>@reservation.ReservationID</td>
                        <td>@reservation.User.UserName</td>
                        <td>@reservation.ReservationDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <h3>Quick Actions</h3>
        <ul>
            <li>@Html.ActionLink("Manage Users", "Index", "Users")</li>
            <li>@Html.ActionLink("Manage Reservations", "Index", "Reservations")</li>
            <li>@Html.ActionLink("View Reports", "Index", "Reports")</li>
            <li>@Html.ActionLink("Users", "Index", "Users")</li>
            <li>@Html.ActionLink("UserTypes", "Index", "UserTypes")</li>
        </ul>
    </div>
</div>