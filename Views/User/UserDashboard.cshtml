@model Koffee_Hotel.Models.User

@{
    ViewBag.Title = "User Dashboard";
}

<h2>Welcome, @Model.UserName!</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Your Information</h3>
        <p>Email: @Model.EmailAddress</p>
        <!-- Add more user information as needed -->
    </div>
    <div class="col-md-6">
        <h3>Quick Actions</h3>
        <ul>
            <li>@Html.ActionLink("View Bookings", "MyBookings", "Booking")</li>
            <li>@Html.ActionLink("Make a New Reservation", "Create", "Reservation")</li>
            <!-- Add more action links as needed -->
        </ul>
    </div>
</div>

<!-- You can add more sections to the dashboard as needed -->